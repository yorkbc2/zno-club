$material = 0 2px 2px 0 rgba(0,0,0,0.14),0 1px 5px 0 rgba(0,0,0,0.12),0 3px 1px -2px rgba(0,0,0,0.2)

body 
	margin 0
	padding 0
	
	font-family 'Roboto Slab', serif
	
.alert-info 
	padding 15px 20px 
	border 1px solid royalblue
	border-radius 10px
	
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	
	flex-direction row 
	flex-wrap nowrap
	margin 10px 20px
	
	p 
		&.icon
			text-align center
			i
				font-size 36px
				color royalblue  
			flex 1
			
		flex 7
		text-align left
		
		a 
			color royalblue 
			text-decoration none
	
.error-message
	background-color rgba(255,0,0,0.35)
	color red
	padding 10px 10px
	border-radius 5px
	border 1px solid rgba(255,0,0,0.7)
	
.categories-list
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	
	flex-direction column 
	flex-wrap wrap
	
	.category-item
		flex 1
		
		padding 15px 20px 
		
		background-color #fff
		box-shadow $material
		border 1px solid #e7e7e7
		h2 
			margin 0
			padding 0
		a
			font-size 22px
			color #000
			text-decoration none
	
.profile-aside
	text-align center
	.profile-image
		border 1px solid transparent
		border-radius 50%
		overflow hidden
		
		margin 20px auto

		width 120px
		height 120px
		
		text-align center
		position relative
		
		&:hover 
			.profile-image--change
				bottom 0
		
		.profile-image--change 
			display block 
			text-align center 
			position absolute
			left 0 
			
			width 100%
			height 30px 
			color #fff 
			background-color rgba(0,0,0,.75)
			
			bottom -40px 
			transition bottom 0.5s ease-in-out

		img 
			width 100%
			height auto
			z-index 1

.center 
	text-align center
	
.form 
	display block
	position relative
	&.left 
		text-align left
	&.comment 
		margin 4px auto 
		padding 10px 
		background-color #fff 
		box-shadow $material
		display block
		width 640px
	
	div 
		display block
		position relative
		margin 20px 0 
		
		textarea 
			width calc(90% - 30px)
			min-height 100px
			resize none 
			
			padding 10px 15px
			font-size 16px
			font-family "Roboto Slab", sans-serif
		
		label 
			display block
			
			font-size 16px
			flex-wrap bold 
			
		input 
			padding 10px 15px
			background-color #fff 
			border 1px solid #e7e7e7 
			box-shadow $material
			display block
			width calc(100% - 30px)
			font-size 16px
	

.columns 
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-direction row 

	flex-wrap nowrap
	justify-content space-between
	
	.column 
		flex 1
		margin 0 10px
		
.panel
	background-color #fff 
	box-shadow $material 
	padding 15px
	

.profile-social--list
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	
	flex-direction row 
	flex-wrap wrap 
	
	justify-content center
	margin-top 10px
	
	div 
		width 20%
		
		a 
			display block
			width 30px 
			height 30px
			color #fff 
			font-size 18.6px 
			line-height 170%
			border-radius 50%
		
		&.icon-shell
			
			&.vk
				a
					color #fff 
					background-color #45668e 

			&.instagram 
				a 
					color #fff 
					background linear-gradient(145deg, #3051F1 10%, #C92BB7 70%) no-repeat
					
			
			&.github
				a
					background-color #000 
					color #fff 
			
			&.twitter
				a 
					background-color #00b6f1
					color #fff 
			
			&.facebook 
				
				a 
					background-color #3b5998  
					color #fff 
			

.line-header
	padding 30px 20px
	font-size 24px
	
	border-left 3px solid #ff3333

.aside-posts
	h3 
		padding-left 15px
		
	ol
		margin 0
		padding 0
		li 
			list-style none
			box-shadow $material
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			flex-direction row
			flex-wrap nowrap
			margin 10px 0 
			padding 5px 10px
			a 
				color #000
				text-decoration none
				&:hover
					color #000
					text-decoration underline
					
.aside-pbc
	h3 
		padding-left 15px
		
	ul
		margin 0
		padding 0
		
		li 
			list-style none
			box-shadow $material
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			flex-direction row
			flex-wrap nowrap
			margin 10px 0 
			padding 4px
			
			div 
				&.pbc-content
					font-size 16.5px
					padding-left 10px
					line-height 130%
					padding-top 20px
					a
						color #000
						text-decoration none
				&.pbc-image
					width 56px
					height 56px
					overflow hidden
					text-align center 
					border-radius 50%
					
					img 
						width 100%
						height auto 	

.read-more--button
	color #000 
	text-decoration none 
	
	padding 10px 15px 
	border 1px solid #000
	outline none
	
	display inline-block
	transition all 0.3s ease-in-out
	background-color #fff
	font-family "Roboto Slab", serif
	font-size 16px
	
	cursor pointer
	
	&.large 
		font-size 20px
		padding 15px 20px
		margin 10px 0 
	&:hover
		color #fff!important
		background-color #000

.main-container
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-direction row
	padding 0 30px
	
	align-items flex-start
	
	.content-container
		width 70%
		padding 10px 30px

	.posts-container
		width 70%
		padding 10px 30px
		.post-list
			display flex
			flex-direction row 
			justify-content space-between
			flex-wrap wrap

			.post-item
				width 45%
				margin 10px
				box-shadow $material 
				.post-item--content
					padding 25px
					a
						color #000 
						text-decoration none
				.post-item--image
					width 100%
					min-height 100px
					max-height 240px
					overflow hidden
					img
						width 100%
						height auto 
			
	.side-container
		width 30%
		box-shadow $material 
		background-color #fff
		padding 5px

@media screen and (max-width 720px)
	.main-container
		flex-direction column
		

.post-page
	background-color #fff 
	box-shadow $material
	text-align center
	padding-bottom 15px
	
	.post-page--header
		font-size 24px
		text-transform uppercase
	.post-page--content
		h1 
			font-size 20px
		h2 
			font-size 18px
			
		font-size 16px
	.post-page--image
		width 100%
		min-height 100px
		max-height 420px
		overflow hidden
		img 
			width 100%
			height auto
			z-index 1

	
.little-divider
	width 320px
	height 2px
	position relative
	margin 10px auto 
	background-color #000

.app-wrapper
	padding-top 100px

&.caret
	position absolute
	display block
	border 5px solid #000 
	
	border-color #000 transparent transparent transparent
		
	top 48%
	
	right 15px
	
.commentary
	box-shadow $material 
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	
	flex-direction row 
	flex-wrap nowrap 
	width 480px
	margin 20px auto
	.c-aside 
		width 25%
		.c-aside--image
			width 100px 
			height 100px
			display block
			overflow hidden 
			border-radius 50%
			margin 5px 
			
			img 
				width 100%
				height auto 
	.c-inside
		position relative 
		width 75%
		text-align left 
		.c-remove
			position absolute
			top 10px 
			right 10px 
			button 
				background-color transparent
				color grey 
				border 0 
				font-size 18px
				cursor pointer
				&:hover
					color #000
		h3 
			a 
				color #000 
				text-decoration none

nav.main-nav
	position fixed
	
	top 0
	left 0 
	
	width 100%
	box-shadow $material
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	
	flex-direction row
	
	justify-content space-between
	
	background-color #fff
	z-index 10000
	
	.nav-profile--droptarget
		position relative	
		display block 
		background-color #fff
		padding-right 40px
		padding-top 10px
		padding-bottom 0
		
		
			

		&:hover
			background-color #fff
			ul 
				top 101%
				opacity 1
		
		ul 
			position absolute	
			border-radius 5px 
			background-color #fff 
			text-align	left!important
			box-shadow $material
			right 15px
			opacity 0
			top -999px
			transition opacity 0.5s ease-in-out
			li 
				display block
				border-bottom 1px solid #e7e7e7	
				text-align left 
				padding 5px 15px
				
				
				&:hover
					background-color rgba(0,0,0,0.01)
	
	.nav-profile--avatar
		width 45px
		height 45px	
		
		border-radius 50%
		overflow hidden 
		text-align	center
		display inline-block
		
		img 
			width 100%
			height auto 
			z-index 1
			
	
	.nav-list
		flex 1
		
		&.left 
			flex 3
		
		&.right
			flex 1
			text-align right
			
			li 
				text-align right
	
	ul 
		margin 0
		padding 0
		
		li
			list-style none
			display inline-block
			padding 20px 20px
			padding-top 23px
			
			&:hover
				background-color rgba(0,0,0,0.05)
			
			&.nav-brand
				padding 10px 20px
				padding-bottom 16px
				padding-top 12px
				a
					font-family 'Russo One', sans-serif
					font-size 32px
			
			a
				color #000 
				text-decoration none
				font-size 18px
				
				&:hover
				&:active
					text-decoration none 
					color #000
					

.pagination
	margin 5px auto 
	li 
		display inline-block
		list-style none
		
		padding 10px 15px
		font-size 18px
		
		border 1px solid #e7e7e7
		margin 0
		
		&.disabled
			opacity 0.5
			
		&.active
			color #ff3333
			

		
		
		&:first-child
			border-radius 3px 0 0 3px
			
		&:last-child
			border-radius 0 3px 3px 0

		a
			text-decoration none 
			color #000
			
			&:hover
				color #ff3333
				
.form-by-groups
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	
	flex-direction row
	flex-wrap wrap 
	
	div 
		width 45%
		margin 10px 
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		
		flex-wrap nowrap
		
		flex-direction row 
		
		i
			width 36px
			height 36px
			background-color rgba(0,0,0,0.1)
			color grey
			font-size 24px
			text-align center
			line-height 130%
			box-shadow $material
		input
			flex 1
			font-size 16px 
			padding 5px 
			font-family "Roboto Slab", sans-serif
			border 1px solid #e7e7e7
			box-shadow $material
.modal-window
	position fixed
	width 100%
	height 100%
	z-index 1000
	top 0
	left 0
	
	background-color rgba(0,0,0,.4)
	
	.modal-block
		width 640px
		box-shadow $material
		margin 100px auto 
		background-color #fff 
		position relative
		border-radius 15px
		.modal-body
			padding 10px 
			background-color #fff 
			border-top 1px solid #e7e7e7
			border-radius 0 0 15px 15px
		.modal-header
			padding 5px 10px 
			background-color #fdfdfd
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			flex-direction row 
			flex-wrap nowrap
			.modal-heading
				border-radius 15px 15px 0 0 
				h2 
					font-size 18px
					margin 0
					padding 0
					font-weight  lighter
				
			.modal-close
				position absolute
				top 2px 
				right 20px 
				a
					font-size 36px
					text-decoration none 
					color #000
				
h2
	&.inline-block
		padding 2px 10px 
		margin 0
		
.button 
	display inline-block
	margin 5px 10px 
	padding 5px 10px 
	font-size 15px 
	
	border 1px solid transparent
	box-shadow $material 
	
	text-decoration none 
	cursor pointer

	&.green 
		background-color #33de33
		border-radius 2px  
		color #fff 
		
		&:hover
			background-color #18cb18

.inline-block 
	display inline-block
	
.balls 
	font-size 24px 
	display inline-block 
	
	position relative
	
	width 20px
	margin 0 15px
	text-align center
	height 30px

	.top-butt
	.bottom-butt
		position absolute
		width 100%
		left 0 
		background-color transparent
		border 0 
		text-align center 
		padding 0
		margin 0
		color #000
		font-size 19px
		&:disabled
			color grey
		
	.bottom-butt
		top 100%
		
	.top-butt 
		bottom 100% 
		

.muted
	font-size 15px 
	color rgba(0,0,0,0.75)
	padding 5px 10px 
	line-height 110%
	
.topic-page-content
	padding-left 40px
	p 
		line-height 100%
	
.topic-page--footer
	
	color rgba(0,0,0,0.75)
	font-size 0.913em
	a 
		color rgba(0,0,0,0.75)
		font-size 1em 

.topic-page--header
	position relative 
	padding 0 0 5px 40px 
	a 
		text-decoration none
	.topic-page--title
		h2 
			padding 0 
			margin 0 
			font-size 22px
	
	.topic-page--author
		p
			line-height 150%
			color rgba(0,0,0,0.8)
			font-size 16.4px 
			
		.topic-page--avatar-shell
			width 40px 
			height 40px 
			position absolute
			top 0 
			left -10px
			border-radius 50% 
			overflow hidden
			img 
				width 100%
				height auto 

.topic-list
	padding 10px 10px 10px 40px
	.topic 
		padding 0 0 20px 20px 
		position relative
		margin 10px 0 
		border-bottom 1px solid #e7e7e7 
		
		.topic-content 
			position relative
			display inline-block
			.topic-comments
				width 30px  
				height 25px
				text-align center 
				background-color rgba(0,0,0,1)
				color #fff
				border-radius 9px 
				position absolute
				left 105%
				top 0
				
				&::after 
					content ""
					border 5px solid #000 
					border-color  transparent #000 transparent  transparent 
					position absolute
					bottom 8px 
					right 100% 
					
			a
				color royalblue 
				font-size 18px
				font-weight lighter 
				text-decoration none 
				h2 
					font-size 19px 
					margin 0 
					padding 0 
				&:hover
					text-decoration underline 
		
		.topic-footer
			font-size 14px
			.category 
			.date 
				text-decoration none 
				color rgba(0,0,0,0.75)
				a
					text-decoration none 
					color rgba(0,0,0,0.75)
					font-size 14px
					&:hover
						text-decoration underline 
			
		

		.topic-info 
			a 
				color rgba(0,0,0,0.75)
				text-decoration none 
				&:hover
					text-decoration underline 
			.topic-avatar
				position absolute 
				width 40px
				height 40px 
				border-radius 50% 
				
				overflow hidden 
				
				top 0 
				left -30px
				img 
					width 100%
					height auto